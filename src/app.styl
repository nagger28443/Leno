*
  box-sizing: border-box

html 
  font-family: Menlo, "Helvetica Neue", Helvetica, Arial, "PingFang SC", "Hiragino Sans GB", "Heiti SC", "Microsoft YaHei", "WenQuanYi Micro Hei",sans-serif

body
  background: #f5f5f5
  margin: 0

#root
  display: flex

.banner
  background: #2c76c7e3
  color: #f5f5f5
.menu
  padding: 0
  margin: auto
  text-align: center
  font-size smaller
  color: #073e5b
  .menu-item
    display: inline-block
    margin: 0.5rem
    &:hover
      transition: 0.5s transform;
      transform: scale(1.1);
  .menu-link
    text-decoration: none;


.sidebar
  width: 27%
  max-width 22rem
  min-width 16rem
  transition margin-top 0.8s cubic-bezier(0,.5,.7,1.36)
  padding 300vh 2rem

.topbar
  position: fixed
  top: 0
  min-height: 4rem
  max-height: 10rem
  padding: 1rem 2rem
  width: 100vw 
  overflow: hidden
  transition: height 0.4s

.bar-place-holder
  min-height: 6rem
  max-height: 10rem

.contents
  padding: 5% 0
  flex: 1
  color: #555
  article 
    background: #ffffff
    margin-bottom: 6%
    word-break: break-word;
    padding: 2rem 5%
  header 
    font-size: xx-large
    font-weight: bold
  p
    line-height: 1.7
    text-indent: 2rem
  pre
    text-overflow: clip;
    white-space: pre-wrap;



@media (max-width: 414px)
  html 
    font-size 66%

@media (max-width: 960px)
  #root
    display block
  .banner
    .menu
      float: right 