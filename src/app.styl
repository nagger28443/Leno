html 
  font-family: Menlo, "Helvetica Neue", Helvetica, Arial, "PingFang SC", "Hiragino Sans GB", "Heiti SC", "Microsoft YaHei", "WenQuanYi Micro Hei",sans-serif

body
  background: #e9f2f9
  margin: 0

#root
  position relative
  
.banner
  background: #0a89cc
  color: #ffffff
.sidebar
  min-height: 100vh
  width: 27%
  max-width 22rem
  float left

.topbar
  position fixed
  top:0 
  min-height: 6rem
  width: 100vw 
  overflow: hidden

.contents
  padding: 5%
  article 
    background: #ffffff
    margin-bottom: 6%
  header 
    font-size: xx-large
    font-weight: bold
  p
    line-height: 1.7
    text-indent: 2rem