*
  box-sizing: border-box

html 
  font-family: Menlo, "Helvetica Neue", Helvetica, Arial, "PingFang SC", "Hiragino Sans GB", "Heiti SC", "Microsoft YaHei", "WenQuanYi Micro Hei",sans-serif

body
  margin: 0
  background-color: #f5f5f5
  overflow-y: scroll

#root
  display: flex
  color: #555
  margin: auto
  max-width: 100rem

.banner 
  background-color: #f5f5f5 
  z-index: 10

.sidebar
  width: 20%
  max-width: 22rem
  min-width: 16rem
  transition: margin-top 0.8s cubic-bezier(0,.5,.7,1.36)
  padding: 2rem
  background: linear-gradient(to bottom,#f2f2f2,#f5f5f5 2rem)

.topbar
  position: fixed
  top: 0
  min-height: 3.5rem
  max-height: 6rem
  padding: 0 8rem 0 4rem
  width: 100vw 
  overflow: hidden
  transition: height 1s ease-in-out
  display: flex
  align-items: center

article
  header 
    font-size: xx-large
    font-weight: bold
  p
    line-height: 1.7
    text-indent: 2rem
  pre
    text-overflow: clip;
    white-space: pre-wrap;
  blockquote
    padding: 0.4rem 0
    position relative
    color: #666
    &:before
      content: ''
      background: linear-gradient(to right, #dbdbdb, #6680990d 0.6rem,#6680990d)
      left: -2rem
      top: 0
      width: 110%
      height 100%
      position: absolute

.plain-link
  display: inline-block
  text-decoration: none
  color: inherit
  cursor: pointer
  transition: 0.5s transform
  &:hover
    transform: scale(1.2)
 

@media (max-width: 414px)
  html 
    font-size 66%

@media (max-width: 1200px)
  #root
    display block

