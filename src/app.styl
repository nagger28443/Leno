*
  box-sizing: border-box

html 
  font-family: Menlo, "Helvetica Neue", Helvetica, Arial, "PingFang SC", "Hiragino Sans GB", "Heiti SC", "Microsoft YaHei", "WenQuanYi Micro Hei",sans-serif

body
  margin: 0

#root
  display: flex
  background-color: #f5f5f5

.banner 
  color: #555
  background-color: inherit 

.sidebar
  width: 27%
  max-width 22rem
  min-width 16rem
  transition margin-top 0.8s cubic-bezier(0,.5,.7,1.36)
  padding 0 2rem

.topbar
  position: fixed
  top: 0
  min-height: 4rem
  max-height: 10rem
  padding: 1rem 2rem
  width: 100vw 
  overflow: hidden
  transition: height 0.4s

.contents
  padding: 0
  flex: 1
  color: #555
  header 
    font-size: xx-large
    font-weight: bold
  p
    line-height: 1.7
    text-indent: 2rem
  pre
    text-overflow: clip;
    white-space: pre-wrap;
  blockquote
    padding: 0.4rem 0
    position relative
    color: #666
    &:before
      content: ''
      background: linear-gradient(to right, #dbdbdb, #6680990d 0.6rem,#6680990d)
      left: -2rem
      top: 0
      width: 110%
      height 100%
      position absolute

@media (max-width: 414px)
  html 
    font-size 66%

@media (max-width: 960px)
  #root
    display block