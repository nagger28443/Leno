html 
  font-family: Menlo, "Helvetica Neue", Helvetica, Arial, "PingFang SC", "Hiragino Sans GB", "Heiti SC", "Microsoft YaHei", "WenQuanYi Micro Hei",sans-serif

body
  background #e9f2f9
  margin 0

@media  (min-width: 960px)
  .floatbar
    float left 
  .fixedbar
    position fixed
    bottom 0

.sidebar
  background #0a89cc
  color #ffffff
.topbar
  position fixed

.contents
  padding 5%
  
  article 
    background #ffffff
    margin-bottom 6%
  header 
    font-size xx-large
    font-weight bold
  p
    line-height 1.7
    text-indent 2rem